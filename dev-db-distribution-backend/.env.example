# App
PORT=8080
NODE_ENV=development

# Azure AD (Entra ID) — API App Registration (protected resource)
AAD_TENANT_ID=replace_me
AAD_AUTHORITY=https://login.microsoftonline.com/${AAD_TENANT_ID}/v2.0
AAD_API_CLIENT_ID=replace_me
AAD_ALLOWED_AUDIENCES=${AAD_API_CLIENT_ID}
AAD_ALLOWED_GROUPS_ADMINS=replace_group_object_id_csv
AAD_ALLOWED_GROUPS_AUDITORS=replace_group_object_id_csv

# Runner
RUNNER_BEARER_TOKEN=replace_strong_secret

# Azure SQL (Prisma)
DATABASE_URL="sqlserver://<server>.database.windows.net:1433;database=<db>;user=<user>;password=<pass>;encrypt=true"

# Azure Blob
AZURE_STORAGE_ACCOUNT=replace_me
AZURE_STORAGE_CONTAINER=sqlbackups
AZURE_STORAGE_BACKUPS_PREFIX=raw-backups
USE_MANAGED_IDENTITY=false
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=...

# SAS settings
DEFAULT_SAS_TTL_HOURS=24

# CORS
CORS_ORIGINS=https://your-frontend.example.com
